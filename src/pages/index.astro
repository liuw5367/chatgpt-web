---
import Layout from "../layouts/Layout.astro";
import ReactApp from "../components/ReactApp";
import { APP_NAME } from "../constants";

import "uno.css";
import "../components/markdown.css";
import "../components/app.css";
import "katex/dist/katex.min.css";
import "highlight.js/styles/github-dark.css";
import "github-markdown-css";
---

<Layout title={APP_NAME}>
  <main>
    <ReactApp client:only="react" />
    <div id="app-loading">
      <div>
        <div class="spinner" />
        <img src="/public/favicon.svg" class="logo" alt="" />
      </div>
    </div>
  </main>
</Layout>

<style>
  body {
    margin: 0;
  }

  main {
    height: 100vh;
    padding: 0;
    background: white;

    @media (prefers-color-scheme: dark) {
      background: #1A202C;
    }
  }

  .spinner {
    height: 32px;
    width: 32px;

    border: 2px solid transparent;
    border-top-color: teal;
    border-radius: 50%;

    animation: spinner 666ms linear infinite;
  }

  @keyframes spinner {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  #app-loading {
    position: absolute;
    top: 36%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  #app-loading > div {
    padding: 2px;
    position: relative;
    display: flex;
    justify-content: center;

    @media (prefers-color-scheme: dark) {
      background: white;
      border-radius: 100px;
    }
  }

  #app-loading .logo {
    position: absolute;
    top: 8px;
    width: 24px;
    height: 24px;
    animation: spinner 1200ms linear infinite;
  }
</style>
